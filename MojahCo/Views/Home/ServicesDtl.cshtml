@model MojahCo.ViewModels.ServiceViewModel

@{
    ViewData["Title"] = "ServicesDtl";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sid = Model.Service.ServiceId;
    string sl = "";
    var sliderImage = Model.ServiceImages
        .Where(s => s.ServiceId == sid && s.IsSlider == true)
        .FirstOrDefault();
    if(sliderImage !=null)
    {
        sl = sliderImage.ImagePath;
    }
}

<section class="bg-gray-dark">

    <section class="section parallax-container" data-parallax-img="/images/banner/@sl">

        <div class="parallax-content parallax-header">
            <div class="parallax-header__inner">
                <div class="parallax-header__content">
                    <div class="container">
                        <div class="row justify-content-sm-center">
                            <div class="col-md-10 col-xl-8">
                                <h2 class="heading-decorated"> @Model.Service.ServiceName </h2>
                                
                                <p class="heading-6">The size of our team and our protracted expertise allow us to accomplish absolutely any type of a building, regardless of its height and/or complexity!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</section>


<!-- General Contracting-->
<section class="section-md bg-gray-lighter">
    <div class="container">
        <div class="row justify-content-md-center row-30 row-md-60">
            <div class="col-md-11 col-lg-10 col-xl-6">
                
                <h4 class="heading-decorated">@Model.Service.ServiceName</h4>
                <p class="heading-6">

                    @Model.Service.LongDescription
                
                </p>
                
            @*  
                    @if(Model.Service.LongDescription!=null)
                    {
                    <p> @Model.Service.LongDescription</p>
                    }
                    
                    else
                    {
                    <p>
                            Throughout our years in business, we've accumulated a strong expertise both in managing and completing any type of a construction, as well as in choosing the right vendors and sub-contractors...
                            We understand how vital it is to coordinate the project in a timely, cost-efficient way. As of now we've alreeady dealt with numerous mid and large scale constructions, so we've mastered the art of minimizing the extra expenses,
                            completing each project's stage on schedule and implementing a
                            live project intact with both original engineering solutions and the client's initial vision...  
                        </p>
                        }*@

              
               
                    @if(Model.Service.HasPdf == true){
                         <a class="button button-primary" name="pdfFile"
                         type="button"
                        href="@Url.ActionLink("DownloadPdf","Home", new {serviceId = Model.Service.ServiceId})" target="_blank"> Read more</a>
                    }
               
            </div>
            
            @{
                var img = Model.ServiceImages.Where(i => i.ServiceId == Model.Service.ServiceId && i.IsSlider == false).FirstOrDefault();
                string imgs = "";
                if(img!=null)
                {
                    imgs = img.ImagePath;
                }
            }

            @if (img != null)
            {
                <div class="col-md-11 col-lg-10 col-xl-6">
                    <img src="~/images/Services/@Model.Service.ServiceName/@imgs" alt="" width="652" height="491" />
                </div>
            }
            <div class="col-md-11 col-lg-10 col-xl-6">
                @*<img src="#" alt="" width="652" height="491" />*@
            </div>
           

        </div>
    </div>
</section>

